# Application Configuration
NODE_ENV=development
PORT=3000

# JWT Configuration
# Secret key for signing JWT access tokens (change in production!)
JWT_SECRET=your-secret-key-change-in-production
# Secret key for signing JWT refresh tokens (should be different from access token secret)
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
# Access token expiration time (default: 15 minutes)
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
# Refresh token expiration time (default: 7 days)
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Database Configuration
# PostgreSQL connection settings

# Database Host
DB_HOST=localhost

# Database Port
DB_PORT=5432

# Database Name (change per environment)
# Development: nx_monorepo_dev
# QA: nx_monorepo_qa
# Staging: nx_monorepo_staging
# Production: nx_monorepo_prod
DB_NAME=nx_monorepo_dev

# Database User
DB_USER=postgres

# Database Password
DB_PASSWORD=postgres

# Alternative: Database URL (overrides individual settings)
# Format: postgres://username:password@host:port/database
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/nx_monorepo_dev

